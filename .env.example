# Environment Variables for Tiny Service
# Copy this file to .env and modify the values as needed

# Welcome prefix used in greeting messages
# Default: "Hello"
WELCOME_PREFIX=Hello

# Application configuration
# Port the application runs on (for local development)
# Default: 8000
PORT=8000

# Log level for application logging
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Prometheus metrics configuration
# Enable/disable metrics collection
# Default: true
ENABLE_METRICS=true

# Example values for different environments:

# Development
# WELCOME_PREFIX=Hello Dev
# LOG_LEVEL=DEBUG

# Staging
# WELCOME_PREFIX=Hello Staging
# LOG_LEVEL=INFO

# Production
# WELCOME_PREFIX=Welcome
# LOG_LEVEL=WARNING
